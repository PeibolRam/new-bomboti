<section class="category-carousel" data-name="category-nav">
  <div class="category-carousel-swiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="category-slide">
          <a href="{{ block.settings.link }}" data-title="">
            <div class="slide-image">
              <img src="{{ block.settings.image | img_url: '1400x' }}" alt="{{ block.settings.title }}">
            </div>
            <h3 class="slide-title">{{ block.settings.title }}</h3>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Carrusel",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Carrusel"
    }
  ],
  "blocks": [
    {
      "type": "category_slide",
      "name": "Category Slide",
      "settings": [
        {
          "type": "image_picker",
          "label": "Image",
          "id": "image"

        },
        {
          "type": "text",
          "label": "Title",
          "id": "title",
          "default": "Diffusers"
        },
        {
          "type": "url",
          "label": "Link",
          "id": "link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "carruseli",
      "category": "custom"
    }
  ]
}
{% endschema %}

